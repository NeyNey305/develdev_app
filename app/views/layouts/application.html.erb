<!DOCTYPE html>
<html>
<head>
  <title>Develdev</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://use.fontawesome.com/575ef5dc80.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.rawgit.com/konpa/devicon/master/devicon.min.css">


</head>

<body>

  <div id="nav">
    <!-- WHEN SIGNED IN  ---------------------------------->
    <% if current_user %>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/dashboard/index">
          <img alt="Brand" src="https://s23.postimg.org/tjq82e2sr/develdev_logo_pic.png" id="develdev_sm"></a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
            <li><a href="#">Shared</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Projects<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/projects">Personal Projects</a></li>
                <li><a href="#">Team Projects</a></li>
                <li><a href="#">Client Projects</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Separated link</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="#">Profile</a></li>
                <li><a href="#">Help</a></li>
                <li><%= link_to "Settings", edit_user_path(current_user.id) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Logout", :logout, method: :post %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- WHEN SIGNED OUT  ------------------------------>
    <% else %>
    <nav class="navbar navbar-default" id="navbar-home">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/home/index">
            <img alt="Brand" src="https://s28.postimg.org/lguhek44t/develdev_logo.png" id="develdev_sm">
          </a>
          <ul class="nav nav-pills">
            <li role="presentation"><a href="#" class="pill-format">Tour</a></li>
            <li role="presentation"><a href="#" class="pill-format">Pricing</a></li>
            <li role="presentation"><a href="#" class="pill-format">Learn</a></li>
          </ul>
        </div>
        <div class="login-reg">
          <%= link_to "Login", :login, class: 'btn btn-default'%>
          <%= link_to "Sign Up", new_user_path, class: 'btn btn-success'%>
        </div>
      </div>
    </nav>
  </div>
    <% end %>

  <div>
    <!-- <p id="notice"><%= flash[:notice] %></p> -->
    <p id="alert"><%= flash[:alert] %></p>
  </div>
  <%= yield %>

</body>
</html>
