

<%= link_to 'New Project', new_project_path, class: 'btn btn-success'%>





<section class="content">
  <h1>PROJECTS</h1>
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-success btn-filter" data-target="pagado">Complete</button>
            <button type="button" class="btn btn-warning btn-filter" data-target="pendiente">In Progress</button>
            <button type="button" class="btn btn-danger btn-filter" data-target="cancelado">Overdue</button>
            <button type="button" class="btn btn-default btn-filter" data-target="all">Todos</button>
          </div>
        </div>

        <div class="table-container">
          <table class="table table-filter">
            <% @projects.each do |project| %>
            <tbody>
              <tr data-status="pagado">
                <td>
                  <div class="ckbox">
                    <input type="checkbox" id="checkbox1">
                    <label for="checkbox1"></label>
                  </div>
                </td>
                <td>
                  <a href="javascript:;" class="star">
                    <i class="glyphicon glyphicon-star"></i>
                  </a>
                </td>
                <td>
                  <div class="media">
                    <a href="#" class="pull-left">
                      <img src="https://s3.amazonaws.com/uifaces/faces/twitter/fffabs/128.jpg" class="media-photo">
                    </a>
                    <div class="media-body">
                      <span class="media-meta pull-right"><%= project.due_date %></span>
                      <h4 class="title">
                        <%= project.name %>
                        <span class="pull-right pagado">(Complete)</span>
                      </h4>
                      <p class="summary">Ut enim ad minim veniam, quis nostrud exercitation...</p>
                      <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                  </div>
                </td>
              </div>
            </div>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
